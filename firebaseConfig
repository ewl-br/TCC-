import 'react-native-url-polyfill/auto';
import 'react-native-get-random-values';

import { initializeApp, getApp, getApps } from 'firebase/app';
import { initializeAuth, getAuth, getReactNativePersistence } from 'firebase/auth';
import AsyncStorage from '@react-native-async-storage/async-storage';

// ⚠️ DADOS SENSÍVEIS: use variáveis de ambiente ou um arquivo .env
const firebaseConfig = {
  apiKey: process.env.FIREBASE_API_KEY, // 🔒 oculto
  authDomain: process.env.FIREBASE_AUTH_DOMAIN, // 🔒 oculto
  projectId: process.env.FIREBASE_PROJECT_ID, // 🔒 oculto
  storageBucket: process.env.FIREBASE_STORAGE_BUCKET, // 🔒 oculto
  messagingSenderId: process.env.FIREBASE_MESSAGING_SENDER_ID, // 🔒 oculto
  appId: process.env.FIREBASE_APP_ID, // 🔒 oculto
  measurementId: process.env.FIREBASE_MEASUREMENT_ID, // 🔒 oculto
};

// Inicialização segura do Firebase
const app = !getApps().length ? initializeApp(firebaseConfig) : getApp();

// Autenticação com persistência no AsyncStorage
let authInstance;
try {
  authInstance = initializeAuth(app, {
    persistence: getReactNativePersistence(AsyncStorage),
  });
} catch {
  authInstance = getAuth(app);
}

export const auth = authInstance;