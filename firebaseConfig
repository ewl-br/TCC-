import 'react-native-url-polyfill/auto';
import 'react-native-get-random-values';

import { initializeApp, getApp, getApps } from 'firebase/app';
import { initializeAuth, getAuth, getReactNativePersistence } from 'firebase/auth';
import AsyncStorage from '@react-native-async-storage/async-storage';

// âš ï¸ DADOS SENSÃVEIS: use variÃ¡veis de ambiente ou um arquivo .env
const firebaseConfig = {
  apiKey: process.env.FIREBASE_API_KEY, // ğŸ”’ oculto
  authDomain: process.env.FIREBASE_AUTH_DOMAIN, // ğŸ”’ oculto
  projectId: process.env.FIREBASE_PROJECT_ID, // ğŸ”’ oculto
  storageBucket: process.env.FIREBASE_STORAGE_BUCKET, // ğŸ”’ oculto
  messagingSenderId: process.env.FIREBASE_MESSAGING_SENDER_ID, // ğŸ”’ oculto
  appId: process.env.FIREBASE_APP_ID, // ğŸ”’ oculto
  measurementId: process.env.FIREBASE_MEASUREMENT_ID, // ğŸ”’ oculto
};

// InicializaÃ§Ã£o segura do Firebase
const app = !getApps().length ? initializeApp(firebaseConfig) : getApp();

// AutenticaÃ§Ã£o com persistÃªncia no AsyncStorage
let authInstance;
try {
  authInstance = initializeAuth(app, {
    persistence: getReactNativePersistence(AsyncStorage),
  });
} catch {
  authInstance = getAuth(app);
}

export const auth = authInstance;